
<center>
<%= image_tag @entry.photo.url(:original) %>
</center>

<h2>
  <%= @entry.title %>
</h2>
<p>
<strong>Challenge</strong>: <%= @entry.challenge.name %>
</p>

  <div id="rating">
    <center>
    <ul class="rating_bar">
    <li><%= link_to "&laquo;".html_safe, @entry.previous, {:id => "previous_link"} %></li>
    <% if @challenge.is_voting? and not current_user.nil? %>
      <%= render :partial => 'rating_bar' %>
    <% end %>
    <li><%= link_to "&raquo;".html_safe, @entry.next, {:id => "next_link"} %></li>
    </ul>
    </center>
  </div>

<% if not @challenge.is_open? %>

<p>
  <%= @entry.description %>
</p>

<hr/>

<p>
  <b>Submitter:</b>
  <%= @entry.user.email %>
</p>

<p>
  <b>Location:</b>
  <%= @entry.location %>
</p>

<% if @entry.camera_make %>
<p>
  <b>Camera make:</b>
  <%= @entry.camera_make %>
</p>
<% end %>

<% if @entry.camera_model %>
<p>
  <b>Camera model:</b>
  <%= @entry.camera_model %>
</p>
<% end %>

<% if @entry.aperture %>
<p>
  <b>Aperture:</b>
  <%= @entry.aperture %>
</p>
<% end %>

<% if @entry.shutter_speed %>
<p>
  <b>Shutter Speed:</b>
  <%= @entry.shutter_speed %>
</p>
<% end %>

<% if @entry.iso %>
<p>
  <b>ISO:</b>
  <%= @entry.iso %>
</p>
<% end %>

<p>
  <b>Flash:</b>
  <%= @entry.flash ? 'yes':'no' %>
</p>

  <% if not @challenge.is_open?%>
  <p>
    <b>EXIF:</b>
    <pre>
    <%# entry.exif %>
    </pre>
  </p>
  <% end %>

<% end %>

<p>
<%= link_to 'Back', challenge_path(@entry.challenge) %>
</p>

<%= render :partial => 'comments/comments_section', :locals => {:commentable => @entry } %>

