<div id="recent">
<h2>
  Recent challenges
</h2>

<ul class="challenges">
  <% Challenge.recent.each do |challenge| %>
    <li>
    <%= render :partial => "challenges/challenge", :locals => {:challenge => challenge} %>
    </li>
  <% end %>
</ul>
</div>

