<%= form_for(@challenge) do |f| %>
  <% if @challenge.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>
    <ul>
    <% @challenge.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :type_id, "Type of challenge" %><br />
    <%= f.collection_select(
      :type_id, 
      Type.active,
      :id, 
      :name) %>
  </div>
  <div class="field">
    <%= f.label :rule_id, "Rules" %><br />
    <%= f.collection_select(
      :rule_id, 
      Rule.active,
      :id, 
      :name) %>
  </div>
  <div class="field">
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.datetime_select :end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
